generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Loan {
  id                Int       @id @default(autoincrement())
  customername      String
  customeremail     String
  customerphone     String
  customersalary    Float
  loanamount        Float
  interestrate      Float
  loanterm          Int
  startdate         DateTime
  enddate           DateTime
  monthlypayment    Float
  totalrepayment    Float
  loanstatus        LoanStatus
  createdat         DateTime
  updatedat         DateTime
}

enum LoanStatus {
  PENDING
  APPROVED
  REJECTED
  PAID
  OVERDUE
}

